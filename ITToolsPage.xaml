<Window x:Name="IT_Tools" x:Class="Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT_Info_App_v._01"
        mc:Ignorable="d"
        Title="IT Tools" Height="435" Width="510" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Button x:Name="btn_clearCacheAndCookies" Content="Clear Cache and Cookies" HorizontalAlignment="Left" Margin="15,51,0,0" VerticalAlignment="Top" Height="40" Width="226" FontSize="20" Panel.ZIndex="2" FontWeight="Normal" FontStyle="Normal" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070"/>
        <Button x:Name="btn_clearCredentialVault" Content="Clear Credential Manager" HorizontalAlignment="Left" Margin="15,97,0,0" VerticalAlignment="Top" Width="226" Height="40" FontSize="20" Panel.ZIndex="2" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070"/>
        <Button x:Name="btn_hardwareInfo" Content="Hardware Info" HorizontalAlignment="Left" Margin="15,143,0,0" VerticalAlignment="Top" Width="226" Height="40" FontSize="20" Panel.ZIndex="2" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070"/>
        <Button x:Name="btn_resetPassword" Content="Password Reset" HorizontalAlignment="Left" Margin="15,189,0,0" VerticalAlignment="Top" Width="226" Height="40" FontSize="20" Panel.ZIndex="2" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070" />
        <Button x:Name="btn_connectVPN" Content="Connect AOVPN" HorizontalAlignment="Left" Height="40" Margin="257,51,0,0" VerticalAlignment="Top" Width="208" FontSize="20" Panel.ZIndex="2" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070" />
